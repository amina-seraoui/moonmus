<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>Moonmus{% block title %}{% endblock %}</title>
        <link rel="icon" type="image/svg" href="assets/img/logo.svg">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <header>
            <img src="assets/img/logo.svg" alt="Moonmus Logo" class="logo" width="64" height="64" />
            <nav class="navbar" id="main-navbar">
                <ul>
                    <li class="active"><a href="{{ path('home') }}">Accueil</a></li>
                    <li><a href="{{ path('home') }}">Boutique</a></li>
                    <li><a href="{{ path('home') }}">Inscription</a></li>
                    <li><a href="{{ path('home') }}">Connexion</a></li>
                </ul>
                <ul>
                    <li><a href="#"><img src="assets/img/user.svg" alt="Icône utilisateur" width="24" height="24"></a></li>
                    <li><a href="#"><img src="assets/img/cart.svg" alt="Icône chariot" width="24" height="24"></a></li>
                </ul>
            </nav>
        </header>

        {% block body %}{% endblock %}

        <footer>
            <div>
                <p>Copyright © 2022 - <a href="https://amina-seraoui.vercel.app/fr">Amina Seraoui</a>. Tous droits réservés.</p>
                <img src="assets/img/logo.svg" alt="Moonmus Logo" class="logo" width="128" height="128" />
            </div>
            <nav>
                <ul data-title="Catégories">
                    <li><a href="#">Femmes</a></li>
                    <li><a href="#">Hommes</a></li>
                    <li><a href="#">Livres</a></li>
                    <li><a href="#">Soins</a></li>
                    <li><a href="#">Maison</a></li>
                </ul>
                <ul data-title="Mentions légales">
                    <li><a href="#">CGV</a></li>
                    <li><a href="#">Mentions légales</a></li>
                    <li><a href="#">Service client</a></li>
                </ul>
                <ul data-title="Retrouvez-nous">
                    <li><a href="#"><img src="assets/img/insta.svg" alt="Icône Instagram" width="32" height="32"></a></li>
                    <li><a href="#"><img src="assets/img/fb.svg" alt="Icône Facebook" width="32" height="32"></a></li>
                    <li><a href="#"><img src="assets/img/twitter.svg" alt="Icône Twitter" width="32" height="32"></a></li>
                    <li><a href="#"><img src="assets/img/tiktok.svg" alt="Icône Tiktok" width="32" height="32"></a></li>
                </ul>
            </nav>
        </footer>

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </body>
</html>
